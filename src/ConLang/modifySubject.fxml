<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ConLang.ModifySubjectController">
    <children>
        <VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0">
            <children>
                <HBox prefHeight="100.0" prefWidth="200.0">
                    <children>
                        <Label alignment="CENTER" prefHeight="35.0" prefWidth="600.0" text="MODIFY SUBJECT">
                            <font>
                                <Font name="System Bold" size="24.0" />
                            </font>
                        </Label>
                    </children>
                </HBox>
                <HBox prefHeight="100.0" prefWidth="200.0">
                    <children>
                  <Label prefHeight="25.0" prefWidth="150.0" text="SUBJECT NAME" />
                        <TextField fx:id="nameTxtF" editable="false" prefHeight="25.0" prefWidth="200.0" />
                    </children>
                </HBox>
                <HBox prefHeight="100.0" prefWidth="200.0">
                    <children>
                  <Label prefHeight="25.0" prefWidth="150.0" text="SUBJECT DESCRIPTION" />
                        <TextField fx:id="descTxtF" prefHeight="25.0" prefWidth="200.0" />
                    </children>
                </HBox>
                <HBox prefHeight="100.0" prefWidth="200.0">
                    <children>
                  <Label prefHeight="25.0" prefWidth="150.0" text="TYPE OF SUBJECT" />
                        <ComboBox fx:id="selectCombo" onAction="#selectPPTCombo" prefHeight="25.0" prefWidth="200.0" />
                    </children>
                </HBox>
                <HBox prefHeight="100.0" prefWidth="200.0" />
                <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0">
                    <children>
                        <Button fx:id="saveBtn" mnemonicParsing="false" onAction="#saveSubject" text="SAVE" />
                        <Button fx:id="cancelBtn" mnemonicParsing="false" onAction="#returnAssignSubjectMenu" text="CANCEL" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>

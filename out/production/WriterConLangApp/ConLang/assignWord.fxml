<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ConLang.AssignWordController">
   <children>
      <VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0">
         <children>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label text="AssignWord">
                     <font>
                        <Font name="System Bold" size="24.0" />
                     </font>
                  </Label>
                  <Button mnemonicParsing="false" text="MenuButton" />
               </children></HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label text="Selected Word" />
                  <TextField fx:id="selConWordTxtF" editable="false" />
               </children></HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <TextField fx:id="searchTxtF" />
                  <Button fx:id="searchBtn" mnemonicParsing="false" onAction="#searchPPTSubjects" text="Search Subjects" />
               </children></HBox>
            <HBox prefHeight="284.0" prefWidth="600.0">
               <children>
                  <TableView fx:id="pptSubjectTableView" prefHeight="220.0" prefWidth="574.0">
                    <columns>
                      <TableColumn fx:id="pptNameTblCol" prefWidth="183.0" text="NAME" />
                      <TableColumn fx:id="pptArchTblCol" prefWidth="96.0" text="ARCHETYPE" />
                        <TableColumn fx:id="pptDescTblCol" prefWidth="269.0" text="DESCRIPTION" />
                    </columns>
                  </TableView>
               </children></HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button fx:id="assignBtn" mnemonicParsing="false" onAction="#assignWord" text="Assign Word to Subject" />
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button fx:id="backBtn" mnemonicParsing="false" onAction="#returnLexiConWords" text="Back to LexiConWords" />
               </children>
            </HBox>
         </children></VBox>
   </children>
</AnchorPane>

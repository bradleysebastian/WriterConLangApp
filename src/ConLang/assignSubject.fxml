            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <ListView prefHeight="200.0" prefWidth="200.0" />
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button fx:id="modifyBtn" mnemonicParsing="false" onAction="#modifyPPT" text="Modify" />
                  <Button fx:id="assignBTN" mnemonicParsing="false" onAction="#assignPPT" text="Assign" />
                  <Button fx:id="deleteBtn" mnemonicParsing="false" onAction="#deletePPT" text="Delete" />
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button fx:id="backBtn" mnemonicParsing="false" onAction="#returnMainMenu" text="Back" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>

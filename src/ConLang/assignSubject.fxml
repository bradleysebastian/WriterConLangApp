<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ConLang.AssignSubjectController">
   <children>
      <VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0">
         <children>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label alignment="CENTER" prefHeight="35.0" prefWidth="603.0" text="CREATE OR ASSIGN SUBJECTS">
                     <font>
                        <Font name="System Bold" size="24.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button fx:id="createPPTBtn" mnemonicParsing="false" onAction="#createPPT" prefWidth="225.0" text="CREATE PERSON, PLACE, THING, ETC" />
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <TextField fx:id="searchTxtF" prefWidth="110.0" />
                  <Button fx:id="searchBtn" mnemonicParsing="false" onAction="#searchPPT" text="SEARCH SUBJECTS" />
               </children>
            </HBox>
            <HBox prefHeight="191.0" prefWidth="600.0">
               <children>
                  <TableView fx:id="pptSubjectTblVw" prefHeight="143.0" prefWidth="600.0">
                    <columns>
                      <TableColumn fx:id="pptNameTblCol" prefWidth="228.0" text="NAME" />
                      <TableColumn fx:id="archeTypeTblCol" prefWidth="104.0" text="ARCHETYPE" />
                        <TableColumn fx:id="descTblCol" prefWidth="250.0" text="DESCRIPTION" />
                    </columns>
                  </TableView>
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button fx:id="modifyBtn" mnemonicParsing="false" onAction="#modifyPPT" prefHeight="25.0" prefWidth="80.0" text="MODIFY" />
                  <Button fx:id="assignBTN" mnemonicParsing="false" onAction="#assignPPT" prefHeight="25.0" prefWidth="80.0" text="ASSIGN" />
                  <Button fx:id="deleteBtn" mnemonicParsing="false" onAction="#deletePPT" prefHeight="25.0" prefWidth="80.0" text="DELETE" />
               </children>
            </HBox>
            <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button fx:id="backBtn" mnemonicParsing="false" onAction="#returnMainMenu" prefHeight="25.0" prefWidth="129.0" text="CANCEL &amp; RETURN" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>

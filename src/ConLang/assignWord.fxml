<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ConLang.AssignWordController">
   <children>
      <VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0">
         <children>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label alignment="CENTER" prefHeight="35.0" prefWidth="600.0" text="ASSIGN SUBJECT TO WORD">
                     <font>
                        <Font name="System Bold" size="24.0" />
                     </font>
                  </Label>
               </children></HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label alignment="CENTER" prefHeight="25.0" prefWidth="100.0" text="SELECTED WORD" />
                  <TextField fx:id="selConWordTxtF" editable="false" prefHeight="25.0" prefWidth="200.0" />
               </children></HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <TextField fx:id="searchTxtF" prefHeight="25.0" prefWidth="200.0" />
                  <Button fx:id="searchBtn" mnemonicParsing="false" onAction="#searchPPTSubjects" prefHeight="25.0" prefWidth="150.0" text="SEARCH SUBJECTS" />
               </children></HBox>
            <HBox prefHeight="284.0" prefWidth="600.0">
               <children>
                  <TableView fx:id="pptSubjectTableView" prefHeight="220.0" prefWidth="574.0">
                    <columns>
                      <TableColumn fx:id="pptNameTblCol" prefWidth="183.0" text="NAME" />
                      <TableColumn fx:id="pptArchTblCol" prefWidth="96.0" text="ARCHETYPE" />
                        <TableColumn fx:id="pptDescTblCol" prefWidth="269.0" text="DESCRIPTION" />
                    </columns>
                  </TableView>
               </children></HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button fx:id="assignBtn" mnemonicParsing="false" onAction="#assignWord" prefHeight="25.0" prefWidth="200.0" text="ASSIGN SUBJECT TO WORD" />
               </children>
            </HBox>
            <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button fx:id="backBtn" mnemonicParsing="false" onAction="#returnLexiConWords" prefHeight="25.0" prefWidth="200.0" text="CANCEL &amp; RETURN" />
               </children>
            </HBox>
         </children></VBox>
   </children>
</AnchorPane>

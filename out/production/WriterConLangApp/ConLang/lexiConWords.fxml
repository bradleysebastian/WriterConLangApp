<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ConLang.LexiConWordsController">
   <children>
      <VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0">
         <children>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label text="LexiConWords">
                     <font>
                        <Font name="System Bold" size="24.0" />
                     </font>
                  </Label>
                  <Button mnemonicParsing="false" text="MenuButton" />
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <TextField fx:id="searchTextF" />
                  <Button fx:id="searchBtn" mnemonicParsing="false" onAction="#searchWords" text="Search" />
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <TableView fx:id="lexiConWordsTblVw" prefHeight="80.0" prefWidth="302.0">
                    <columns>
                      <TableColumn fx:id="spelledTblCol" prefWidth="75.0" text="Spelled" />
                      <TableColumn fx:id="phoneticTblCol" prefWidth="75.0" text="Phonetic" />
                        <TableColumn fx:id="wordTypeTblCol" prefWidth="75.0" text="WordType" />
                        <TableColumn fx:id="meaningTblCol" prefWidth="75.0" text="Meaning" />
                    </columns>
                  </TableView>
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button fx:id="modifyBtn" mnemonicParsing="false" onAction="#modifyWord" text="Modify" />
                  <Button fx:id="assignBtn" mnemonicParsing="false" onAction="#assignWord" text="Assign" />
                  <Button fx:id="deleteBtn" mnemonicParsing="false" onAction="#deleteWord" text="Delete" />
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button fx:id="returnBtn" mnemonicParsing="false" onAction="#returnMainMenu" text="Back to Main Menu" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ConLang.AssignSubjectActualController">
   <children>
      <VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0">
         <children>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label text="Assign Subject">
                     <font>
                        <Font name="System Bold" size="24.0" />
                     </font>
                  </Label>
                  <Button mnemonicParsing="false" text="MenuButton" />
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label text="Selected Subject Description" />
                  <TextField fx:id="pptDescTxtF" editable="false" />
                  <Label text="Subject's Archetype" />
                  <TextField fx:id="pptArchTxtF" />
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <TextField fx:id="searchTxtF" />
                  <Button fx:id="searchBtn" mnemonicParsing="false" onAction="#searchLexiConWords" text="Search LexiConWords" />
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <TableView fx:id="conWordTblVw" prefHeight="67.0" prefWidth="316.0">
                    <columns>
                      <TableColumn fx:id="spellTblCol" prefWidth="75.0" text="Spelled" />
                      <TableColumn fx:id="phoneTblCol" prefWidth="75.0" text="Phonetic" />
                        <TableColumn fx:id="typeTblCol" prefWidth="75.0" text="WordType" />
                        <TableColumn fx:id="defTblCol" prefWidth="75.0" text="Meaning" />
                    </columns>
                  </TableView>
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button fx:id="assignBtn" mnemonicParsing="false" onAction="#assignLexiConWord" text="Assign" />
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button fx:id="returnBtn" mnemonicParsing="false" onAction="#returnAssignFirst" text="Back to Assign Main" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
